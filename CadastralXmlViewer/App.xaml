<Application x:Class="CadastralXmlViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CadastralXmlViewer"
             xmlns:viewModel="clr-namespace:CadastralXmlViewer.MVVM.ViewModel"
             xmlns:view="clr-namespace:CadastralXmlViewer.MVVM.View">

    <Application.Resources>

        <DataTemplate DataType="{x:Type TypeName=viewModel:CadastralXmlViewerViewModel}" >
            <view:CadastralXmlViewerView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:HelpViewModel}" >
            <view:HelpView/>
        </DataTemplate>
        
    </Application.Resources>

</Application>
